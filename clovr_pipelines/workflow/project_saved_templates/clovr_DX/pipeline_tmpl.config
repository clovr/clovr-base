[run_command get_coverage]
$;COMMAND_STDOUT$;=$;OUTPUT_DIRECTORY$;/get_coverage.stdout
$;INPUT_ARGS$;= -r $REFERENCE_DB_TAG -o $;OUTPUT_DIRECTORY$; -p $;PICARD_TOOLS_DIR$; -s $;PYTHON_SCRIPTS_DIR$; -g $;GATK_DIR$; $LINE; done < $;REPOSITORY_ROOT$;/output_repository/fastq_pairs_to_delimited_list/$;PIPELINEID$;_default/fastq_to_delimited.txt
$;INPUT_COMMAND$;=while read LINE; do echo $LINE; /opt/ergatis/bin/get_coverage.sh
$;OUTPUT_TOKEN$;=get_coverage

[tag_data default]
$;PIPELINE_NAME$;=${pipeline.PIPELINE_WRAPPER_NAME}
$;MAP_FILE$;=$;TMP_DIR$;/$;PIPELINE_NAME$;_download.map.txt
$;INPUT$;=<<_EOT
#TAG_NAME       FILES\n
percent_coverage	$;REPOSITORY_ROOT$;/output_repository/run_command/$;PIPELINEID$;_get_coverage/coverage_environment.list\n
reads_per_marker	$;REPOSITORY_ROOT$;/output_repository/run_command/$;PIPELINEID$;_get_coverage/marker_reads.list\n
\n
#################    Workflow xml download       ##########################\n
# paths for all the workflow xml dirs are tarred to /tmp/workflow_xml.tar #\n
# For further reference, see preprocessing commands in tag_data.xml       #\n
###########################################################################\n
workflow_xml_tag	$;TMP_DIR$;/$;PIPELINE_NAME$;_workflow_xml.tar.gz\n
_EOT
$;PIPELINE_ID$;=$;PIPELINEID$;
$;REPO_ROOT$;=$;REPOSITORY_ROOT$;

