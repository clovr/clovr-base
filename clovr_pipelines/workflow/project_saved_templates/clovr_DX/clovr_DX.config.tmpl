## Template configuration file for
#########################################################
## Input information.
## Configuration options for the pipeline.
#########################################################
[input]
FASTAQ_TAG={"display": "Input Fastq Tag", "desc": "Input fastq tag", "type": "dataset", "type_params": {"format_type": ["fastq"], "transform_name": "input.FASTQ_FILE_LIST"}, "required": true}

REFERENCE_DB_TAG={"display": "Reference database", "desc": "Reference database to use", "type": "dataset", "type_params": { "transform_name": "input.DATABASE_PATH", "transform_type": "tag_base_dir" }, "require_value": true }

## This is used for uploading the tags specified above
## Don't change this.
INPUT_TAGS={"display": "Input Tag Vars", "default": "$;FASTQ_TAG$;", "visibility": "always_hidden", "type": "string" }

#########################################################
## Pipeline parameters
## Any parameters to be passed to the pipeline
#########################################################
[params]

#########################################################
## Output info.
## Specifies where locally the data will end up and also
## logging information
#########################################################
[output]

-include_in_section /opt/clovr_pipelines/common_config/output.config

## Downloading of workflow xmls can be accomplished by adding 'workflow_xml_tag' to TAGS_TO_DOWNLOAD
TAGS_TO_DOWNLOAD={"display": "Download tags", "default": "", "desc": "Comma separated list of tags that should be downloaded", "type": "restricted_string list", "type_params": {"choices": [""]}, "visibility": "default_hidden"}


[pipeline]
-include_in_section /opt/clovr_pipelines/common_config/pipeline.config

SOP_VERSION={"display": "SOP Version", "default": "clovr_DX_version_1.0", "type": "string", "visibility": "always_hidden"}

PIPELINE_TEMPLATE={"default": "clovr_DX", "visibility": "hidden", "desc": "The type of the pipeline we are running", "type": "string", "required": true}

#prestart,prerun,postrun are all run locally. Use noop.xml for no operation
#Prestart is run before cluster start
#Possible actions: tag input data and do QC metrics
PRESTART_TEMPLATE_XML={"default": "/opt/clovr_pipelines/workflow/project_saved_templates/clovr_DX/clovr_DX.prestart.xml", "visibility": "always_hidden", "type": "string", "required": true}
#Prerun is run after cluster start but before pipeline start
#Possible actions: tag and upload data sets to the cluster
PRERUN_TEMPLATE_XML={"default": "/opt/clovr_pipelines/workflow/project_saved_templates/clovr_DX/clovr_DX.prerun.xml", "visibility": "always_hidden", "type": "string", "required": true}
#Postrun is run after pipeline completion and after download data
#Possible actions: local a local database, web browser.reorganize data for local ergatis
POSTRUN_TEMPLATE_XML={"default": "/opt/clovr_pipelines/workflow/project_saved_templates/clovr_DX/clovr_DX.postrun.xml", "visibility": "always_hidden", "type": "string", "required": true}

DOWNLOAD_TAG_ITERATOR_XML={"default": "/opt/ergatis/docs/clovrdownload_tag.iterator.xml", "visibility": "always_hidden", "type": "string", "required": true}

