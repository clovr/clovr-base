## Configuration file for
#########################################################
## Input information.
## Configuration options for the pipeline.
#########################################################
[input]
## The input tag name for sff input data
## Should already be tagged data
## See tagData.py --help for more info
INPUT_SFF_TAG={"display": "Input Tag", "desc": "The input tag for this pipeline", "type": "dataset", "type_params": { "format_type": ["sff"], "transform_name": "input.INPUT_FILE_LIST" }, "require_value": true }

## For the annotation portion of the pipeline.
REFERENCE_DB_TAG={"display": "Reference database", "default": "clovr-prok-db", "desc": "Reference database to use", "type": "dataset", "type_params": { "transform_name": "input.DATABASE_PATH", "transform_type": "tag_base_dir" }, "require_value": true }

[params]
## organism info
OUTPUT_PREFIX={"display": "Output prefix for the organism", "default": "asmbl", "desc": "Organisms have a prefix on them", "type": "string", "require_value": true }
ORGANISM={"display": "Organism", "desc": "Genus and species of the organism.  Must be two words in the form of: Genus species", "type": "organism", "require_value": true }

## sff_to_CA options
##
## trim can be one of the following values:
## none, soft, hard, chop
TRIM={"display": "Trim", "default": "chop", "type": "restricted_string", "type_params": { "choices": ["none", "soft", "hard", "chop"] }, "require_value": true }
##
## clear can be one of the following values:
## all, 454, none, n, pair-of-n, discard-n
CLEAR={"display": "Clear", "default": "454", "type": "restricted_string", "type_params": {"choices": ["all", "454", "none", "n", "pair-of-n", "discard-n"] }, "require_value": true }
LINKER={"display": "Linker", "default": "titanium", "desc": "What linker to use", "type": "restricted_string", "type_params": { "choices": ["titanium", "flx"] }, "require_value": true }
INSERT_SIZE={"display": "Insert size", "default": "8000 1000", "desc": "Insert size, must be two numbers separated by a space (ex '8000 1000')", "type": "insert_size" }

## celera assembler options
SPEC_FILE={"display": "Spec file", "default": "/dev/null", "require_value": true, "type":"string"}
SKIP_BANK={"display": "Skip bank", "default": "true", "desc": "Whether to skip the bank file creation or not, if running on anything but local set to true", "type": "boolean", "type_params": { "true": "toAmos,bank-transact,cleanup afg file", "false": "null", "transform_name": "params.SKIP_BANK_T" } }


#########################################################
## Output info.
## Specifies where locally the data will end up and also
## logging information
#########################################################
[output]
-include_in_section /opt/clovr_pipelines/common_config/output.config

## These are the output tags which will be downloaded
## at the end of the pipeline to the local VM.
## Possible options:
TAGS_TO_DOWNLOAD={"display": "Tags to download", "default": "assembly_scf,assembly_qc,polypeptide_fasta,cds_fasta,annotation_genbank,annotation_sqn", "desc": "The pipeline generates a number of output files, you can choose which of these outputs to download", "type":"restricted_string list", "type_params": { "choices": ["assembly_scf", "assembly_qc", "polypeptide_fasta", "cds_fasta", "annotation_genbank", "annotation_sqn"] } }

[pipeline]
-include_in_section /opt/clovr_pipelines/common_config/pipeline.config

SOP_VERSION={"default": "clovr_microbe454_version_0.0", "type": "string", "visibility": "always_hidden"}
PIPELINE_TEMPLATE={"default": "clovr_microbe454", "visibility": "hidden", "type": "string"}
#prestart,prerun,postrun are all run locally. Use noop.xml for no operation
#Prestart is run before cluster start
#Possible actions: tag input data and do QC metrics
PRESTART_TEMPLATE_XML={"default": "/opt/clovr_pipelines/workflow/project_saved_templates/clovr_microbe454/clovr_microbe454.prestart.xml", "visibility": "always_hidden", "type": "string"}
#Prerun is run after cluster start but before pipeline start
#Possible actions: tag and upload data sets to the cluster
PRERUN_TEMPLATE_XML={"default": "/opt/clovr_pipelines/workflow/project_saved_templates/clovr_microbe454/clovr_microbe454.prerun.xml", "visibility": "always_hidden", "type": "string"}
#Postrun is run after pipeline completion and after downlaod data
#Possible actions: local a local database, web browser.reorganize data for local ergatis
POSTRUN_TEMPLATE_XML={"default": "/opt/clovr_pipelines/workflow/project_saved_templates/clovr_microbe454/clovr_microbe454.postrun.xml", "visibility": "always_hidden", "type": "string" }
DOWNLOAD_TAG_ITERATOR_XML={"default": "/opt/ergatis/docs/clovrdownload_tag.iterator.xml", "visibility": "always_hidden", "type": "string"}
