[clovr_metagenomics_prep default]
$;INPUT_FILE_LIST$;=${input.FASTA_TAG}
$;MAPPING_FILE$;=${input.MAPPING_TAG}

[split_multifasta uclust]
$;TOTAL_FILES$;= ${params.TOTAL_FILES}
$;GROUP_COUNT$; = ${params.GROUP_COUNT}

[uclust default]
$;GROUP_COUNT$; = ${params.GROUP_COUNT}

[split_multifasta rrna]
$;TOTAL_FILES$;= ${params.TOTAL_FILES}
$;GROUP_COUNT$; = ${params.GROUP_COUNT}

[split_multifasta blast]
$;TOTAL_FILES$;= ${params.TOTAL_FILES}
$;GROUP_COUNT$; = ${params.GROUP_COUNT}

[ncbi-blastn rrna]
$;DATABASE_PATH$;=${input.RRNA_DB_PATH}/clovr-rrnadb/rRNAdb
$;GROUP_COUNT$; = ${params.GROUP_COUNT}
$;OTHER_OPTS$;=-W 11 -m 8

[ncbi-blastx default]
$;DATABASE_PATH$;=${input.PROTEIN_DB_PATH}/clovr-cogdb/COGdb
$;GROUP_COUNT$; = ${params.GROUP_COUNT}
$;OTHER_OPTS$;=-m 8

[ncbi-blastn default]
$;DATABASE_PATH$;=${input.NUCLEOTIDE_DB_PATH}/RefSeqdb
$;GROUP_COUNT$; = ${params.GROUP_COUNT}
$;OTHER_OPTS$;=-W 11 -m 8

[clovr_metagenomics_tables rrna]
$;MAPPING_FILE$;=${input.MAPPING_TAG}
$;ANNOTATION_FILE$;=${input.RRNA_DB_PATH}/clovr-rrnadb/rRNAdb.antn

[clovr_metagenomics_tables functional]
$;MAPPING_FILE$;=${input.MAPPING_TAG}
$;ANNOTATION_FILE$;=${input.PROTEIN_DB_PATH}/clovr-cogdb/COGdb.2.antn

[clovr_metagenomics_tables taxonomy]
$;MAPPING_FILE$;=${input.MAPPING_TAG}
$;ANNOTATION_FILE$;=${input.NUCLEOTIDE_DB_PATH}/RefSeqdb.antn  

[metastats functional]
$;GROUP_COUNT$; = ${params.GROUP_COUNT}

[metastats taxonomy]
$;GROUP_COUNT$; = ${params.GROUP_COUNT}

[skiff functional]
$;GROUP_COUNT$; = ${params.GROUP_COUNT}

[skiff taxonomy]
$;GROUP_COUNT$; = ${params.GROUP_COUNT}

[piecharts taxonomy]
$;GROUP_COUNT$; = ${params.GROUP_COUNT}

[piecharts functional]
$;GROUP_COUNT$; = ${params.GROUP_COUNT}

