[clovr_metagenomics_prep default]
$;INPUT_FILE_LIST$;=${INPUT_FILE_LIST}
$;MAPPING_FILE$;=${MAPPING_FILE}

[split_multifasta uclust]
$;TOTAL_FILES$;= ${TOTAL_FILES}
$;GROUP_COUNT$; = ${GROUP_COUNT}

[uclust default]
$;GROUP_COUNT$; = ${GROUP_COUNT}

[split_multifasta rrna]
$;TOTAL_FILES$;= ${TOTAL_FILES}
$;GROUP_COUNT$; = ${GROUP_COUNT}

[split_multifasta blast]
$;TOTAL_FILES$;= ${TOTAL_FILES}
$;GROUP_COUNT$; = ${GROUP_COUNT}

[ncbi-blastn rrna]
$;DATABASE_PATH$;=${RRNA_DB_PATH}/clovr-rrnadb/rRNAdb
$;GROUP_COUNT$; = ${GROUP_COUNT}
$;OTHER_OPTS$;=-W 11 -m 8

[ncbi-blastx default]
$;DATABASE_PATH$;=${PROTEIN_DB_PATH}/clovr-cogdb/COGdb
$;GROUP_COUNT$; = ${GROUP_COUNT}
$;OTHER_OPTS$;=-m 8

[ncbi-blastn default]
$;DATABASE_PATH$;=${NUCLEOTIDE_DB_PATH}/RefSeqdb
$;GROUP_COUNT$; = ${GROUP_COUNT}
$;OTHER_OPTS$;=-W 11 -m 8

[clovr_metagenomics_tables rrna]
$;MAPPING_FILE$;=${MAPPING_FILE}
$;ANNOTATION_FILE$;=${RRNA_DB_PATH}/clovr-rrnadb/rRNAdb.antn

[clovr_metagenomics_tables functional]
$;MAPPING_FILE$;=${MAPPING_FILE}
$;ANNOTATION_FILE$;=${PROTEIN_DB_PATH}/clovr-cogdb/COGdb.2.antn

[clovr_metagenomics_tables taxonomy]
$;MAPPING_FILE$;=${MAPPING_FILE}
$;ANNOTATION_FILE$;=${NUCLEOTIDE_DB_PATH}/RefSeqdb.antn  

[metastats functional]
$;GROUP_COUNT$; = ${GROUP_COUNT}

[metastats taxonomy]
$;GROUP_COUNT$; = ${GROUP_COUNT}

[skiff functional]
$;GROUP_COUNT$; = ${GROUP_COUNT}

[skiff taxonomy]
$;GROUP_COUNT$; = ${GROUP_COUNT}

[piecharts taxonomy]
$;GROUP_COUNT$; = ${GROUP_COUNT}

[piecharts functional]
$;GROUP_COUNT$; = ${GROUP_COUNT}

