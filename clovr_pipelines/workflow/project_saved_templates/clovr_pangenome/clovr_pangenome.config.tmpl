## Template configuration file for
#########################################################
## Input information.
## Configuration options for the pipeline.
#########################################################
[input]
GENBANK_TAG={"display": "Input Genbank Tag", "default": "bifidobacter_genbank_tag", "desc": "Input Genbank tag", "source": "tags"}

REFERENCE_DB_TAG={"display": "Reference database tag", "default": "clovr-prok-db", "desc": "Reference database", "source": "tags"}

PIPELINE_NAME={"display": "Pipeline name", "default": "clovr_pangenome", "desc": "Name of pipeline"}

ORGANISM={"display": "Organism name", "default": "some_organism_name", "desc": "Name of organism"}


#########################################################
## Pipeline parameters
## Any parameters to be passed to the pipeline
#########################################################
[params]


##########################################################
## Cluster info.
## If the cluster_tag is present, the script will first
## check for the presence of this cluster and if it's not
## running will start a cluster with the default settings
##########################################################
[cluster]
-include_in_section /opt/clovr_pipelines/common_config/cluster.config

#########################################################
## Output info.
## Specifies where locally the data will end up and also
## logging information
#########################################################
[output]
-include_in_section /opt/clovr_pipelines/common_config/output.config

TAGS_TO_DOWNLOAD={"display": "Download tags", "default": "pangenome_ncbi_blastp_raw,pangenome_ncbi_tblastn_raw,pangenome_blast_parse_stored,pangenome_new_core_genes,pangenome_profile,pangenome_output,pangenome_new_ps_output,pangenome_new_eps_output,pangenome_core_ps_output,pangenome_core_eps_output,pangenome_pan_ps_output,pangenome_pan_eps_output", "desc": "Comma separated list of tags that should be downloaded"}

OUTPUT_PREFIX={"display": "Output prefix", "default": "somefile_mini", "desc": "Some file mini"}

[pipeline]
PIPELINE_TEMPLATE={"default": "clovr_pangenome", "visibility": "always_hidden", "desc": "The type of the pipeline we are running"}

#prestart,prerun,postrun are all run locally. Use noop.xml for no operation
#Prestart is run before cluster start
#Possible actions: tag input data and do QC metrics
PRESTART_TEMPLATE_XML={"default": "/opt/clovr_pipelines/workflow/project_saved_templates/clovr_pangenome/clovr_pangenome.prestart.xml", "visibility": "always_hidden", "desc": null}
#Prerun is run after cluster start but before pipeline start
#Possible actions: tag and upload data sets to the cluster
PRERUN_TEMPLATE_XML={"default": "/opt/clovr_pipelines/workflow/project_saved_templates/clovr_pangenome/clovr_pangenome.prerun.xml", "visibility": "always_hidden", "desc": null}
#Postrun is run after pipeline completion and after download data
#Possible actions: local a local database, web browser.reorganize data for local ergatis
POSTRUN_TEMPLATE_XML={"default": "/opt/clovr_pipelines/workflow/project_saved_templates/clovr_pangenome/clovr_pangenome.postrun.xml", "visibility": "always_hidden", "desc": null}
DOWNLOAD_TAG_ITERATOR_XML={"default": "/opt/ergatis/docs/clovrdownload_tag.iterator.xml", "visibility": "always_hidden", "desc": null}

