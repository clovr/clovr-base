[interface]
classification = omnidexterous

;to iterate over a list of files, use tabula_rasa component

[parameters]
$;INPUT_COMMAND$; = /opt/vappio-py/vappio/cli/vp-describe-task 
$;INPUT_ARGS$;=--block --exit-code `vp-run-metrics -t --pipeline-name=${input.PIPELINE_NAME} -c params.SCALE_FACTOR=1.75 -c input.POLYPEPTIDE_TAG=$;PIPELINEID$;_polypeptides -c misc.PROGRAM=blastp -c cluster.CLUSTER_NAME=local "filter-keys input.POLYPEPTIDE_TAG misc.PROGRAM cluster.CLUSTER_NAME params.SCALE_FACTOR | sequence-stats | blast-calculate-cpu-hours" 
$;COMMAND_STDOUT$; = $;OUTPUT_DIRECTOR$;/calculate_cpu_hours.stdout
$;COMMAND_STDERR$; = $;TMP_DIR$;/runcommand.stderr

[input]

[output]
$;OUTPUT_TOKEN$; = calculate_cpu_hours
;;note: an $;OUTPUT_EXTENSION$; of "out" or some other common extension for intermediate files may add unintended files to $;OUTPUT_LIST$;
$;OUTPUT_EXTENSION$; = *
$;OUTPUT_DIRECTORY$; = $;REPOSITORY_ROOT$;/output_repository/$;COMPONENT_NAME$;/$;PIPELINEID$;_$;OUTPUT_TOKEN$;
$;OUTPUT_LIST$; = $;OUTPUT_DIRECTORY$;/$;COMPONENT_NAME$;.$;OUTPUT_TOKEN$;.$;OUTPUT_EXTENSION$;.list
;compressed input files handled in tabula_rasa
$;COMPRESS_OUTPUT$; = 1

[component]
$;COMPONENT_NAME$; = run_command
$;DESCRIPTION$; = none
$;WORKFLOW_REPOSITORY$; = $;REPOSITORY_ROOT$;/workflow/runtime/$;COMPONENT_NAME$;/$;PIPELINEID$;_$;OUTPUT_TOKEN$;
$;PIPELINE_TOKEN$; = unnamed

;The version,revision,tag here is set by an interpolated CVS tag
$;VERSION$; = 2.0
$;RELEASE_TAG$; = $Name$
$;REVISION$;            = $Revision: 4680 $

$;TEMPLATE_XML$; = $;DOCS_DIR$;/$;COMPONENT_NAME$;.xml

;Distributed options
$;GROUP_COUNT$; = 150
$;NODISTRIB$; = 0

;the following keys are replaced at runtime by the invocation script
$;COMPONENT_CONFIG$; = 
$;COMPONENT_XML$; = 
$;PIPELINE_XML$; = 
$;PIPELINEID$; = 

[include]
$;PROJECT_CONFIG$;=
