prefix=$(GLOBUS_LOCATION)
exec_prefix=$(GLOBUS_LOCATION)
libdir=${exec_prefix}/lib
includedir=${prefix}/include

Name: xmlsec1
Version: 1.10
Description: XML Security Library implements XML Signature and XML Encryption standards
Requires: libxml-2.0 >= @LIBXML_MIN_VERSION@ libxslt >= @LIBXSLT_MIN_VERSION@ 
Cflags: -DXMLSEC_CRYPTO=\\\"openssl\\\" -DXMLSEC_CRYPTO_DYNAMIC_LOADING=1  -D__XMLSEC_FUNCTION__=__FUNCTION__ -DXMLSEC_NO_SIZE_T -DXMLSEC_NO_XSLT=1 -DXMLSEC_NO_XKMS=1 -I${prefix}/include/xmlsec1  
Libs: -L${libdir} -lxmlsec1  -ldl  
